<% if @article.errors.any? %>

<h2>Error</h2>

    <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
        <% end %>
    </ul>

<% end %>

<div class="row">
    <div class="col-md-12">
    
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |a| %>
     <div class="form-group">  
         <div class="control-label col-sm-2">
                <%= a.label :title %>
            </div>
            
         <div class="col-sm-8">
            
            <%= a.text_field :title, class: "form-control", placeholder: "Title of Article", autofocus: true %>
         </div>
     </div> 
        
        
        
        <div class="form-group">  
         <div class="control-label col-sm-2">
            <%= a.label :description %> 
         </div>
         
         <div class="col-sm-8">
            <%= a.text_area :description, rows: 10, class: "form-control", placeholder: "Description", autofocus: true %>
         </div>
         
        </div>
    
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
            <%= a.submit class: "btn btn-primary bt lg" %>
            </div>
        </div>
        
        <% end %>
        
        <div class="col-xs-4 col-xs-offset-4">
            <%= link_to 'Cancel and return to Articles', articles_path %>
        </div>
    
    </div>
</div>