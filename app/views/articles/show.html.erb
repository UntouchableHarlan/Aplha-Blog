<h1 align="center">
    Title: <%= @article.title %>
</h1>

<div align ="center" class="well col-xs-8 col-xs=offset-2">
    <h4 class="center description"><strong>Description:</strong></h4> 
        <hr>
    <%= simple_format(@article.description) %>


    <div class="article-actions">
<%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-xs btn-primary" %> |

<%= link_to "All Articles", articles_path, class: "btn btn-xs btn-success" %>

<%= link_to 'Delete', article_path(@article), class: "btn btn-xs btn-danger", method: :delete, data: {confirm: "Are you sure?"} %>
    </div>
</div>